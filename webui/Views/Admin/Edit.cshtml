@model ProductModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Edit Product</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
		function hideURLbar(){ window.scrollTo(0,1); } </script>
<!-- //for-mobile-apps -->
<link href="~/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/style.css" rel="stylesheet" type="text/css" media="all" />
<link href="~/css/styles.css?v=1.6" rel="stylesheet">
<!-- js -->
<script src="~/js/jquery-1.11.1.min.js"></script>
<script src="~/js/scripts.js?v=1.7"></script>
<!-- //js -->
<!--FlexSlider-->
		<link rel="stylesheet" href="~/css/flexslider.css" type="text/css" media="screen" />
		<script defer src="~/js/jquery.flexslider.js"></script>
		<script type="text/javascript">
		$(window).load(function(){
		  $('.flexslider').flexslider({
			animation: "slide",
			start: function(slider){
			  $('body').removeClass('loading');
			}
		  });
		});
	  </script>
<!--End-slider-script-->
<!-- pop-up-script -->
<script src="~/js/jquery.chocolat.js"></script>
		<link rel="stylesheet" href="~/css/chocolat.css" type="text/css" media="screen" charset="utf-8">
		<!--light-box-files -->
		<script type="text/javascript" charset="utf-8">
		$(function() {
			$('.view-seventh a').Chocolat();
		});
		</script>
<!-- //pop-up-script -->
<script src="~/js/easyResponsiveTabs.js" type="text/javascript"></script>
<!-- start-smoth-scrolling -->
<script type="text/javascript" src="~/js/move-top.js"></script>
<script type="text/javascript" src="~/js/easing.js"></script>
<script type="text/javascript">
	jQuery(document).ready(function($) {
		$(".scroll").click(function(event){		
			event.preventDefault();
			$('html,body').animate({scrollTop:$(this.hash).offset().top},1000);
		});
	});
</script>
<!-- start-smoth-scrolling -->
<link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
<link href='//fonts.googleapis.com/css?family=Comfortaa:400,300,700' rel='stylesheet' type='text/css'>
</head>
<body>
<!-- banner -->
@await Html.PartialAsync("_navbarBir")
<!-- banner -->
<main class="my-3">
    <div class="container">
        <h1 class="h3">Create Product</h1>
        <hr>
        @if (TempData["message"]!=null)
        {
            var message = JsonConvert.DeserializeObject<AlertMessage>(TempData["message"] as String);
            var strlist = message.Message;
            foreach (var item in strlist)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-@message.AlertType">
                            @item
                        </div>
                    </div>
                </div>
            }
        }
                <form asp-controller="Admin" asp-action="Edit" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="hidden" name="ProductId" value="@Model.ProductId">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" asp-for="Name">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <label class="col-sm-2 col-form-label" asp-for="Url"></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" asp-for="Url">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <label class="col-sm-2 col-form-label" asp-for="City"></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" asp-for="City">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <label class="col-sm-2 col-form-label" asp-for="ArrivalDate"></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" asp-for="ArrivalDate">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <label class="col-sm-2 col-form-label" asp-for="DepartureDate"></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" asp-for="DepartureDate">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <label class="col-sm-2 col-form-label" asp-for="AdultPrice"></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" asp-for="AdultPrice">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <label class="col-sm-2 col-form-label" asp-for="ChildPrice"></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" asp-for="ChildPrice">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <label class="col-sm-2 col-form-label" asp-for="ImageUrl"></label>
                                <div class="col-sm-7">
                                    <input type="hidden" asp-for="ImageUrl">
                                    <img src="~/images/@Model.ImageUrl" width="120"/>
                                    <input type="file" name="file">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-top: 25px;">
                                <div class="offset-sm-1">
                                    <button type="submit" class="btn btn-primary">Save Product</button>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-4">
                        <div class="custom-control custom-checkbox">
                                <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                                <label asp-for="IsApproved" class="custom-control-label"></label>
                            </div>
                        </div>
                    </div>
                </form>
            
    </div>
</main>
<!-- footer -->
@await Html.PartialAsync("_footer")
<!-- //footer -->
</body>
</html>